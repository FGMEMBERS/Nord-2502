<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>asi.ac</path>

  <animation>
    <object-name>ASI.fond</object-name>
    <object-name>ASI.face</object-name>
    <object-name>ASI.needle</object-name>

    <object-name>ASI.vitre</object-name>
 </animation>

  <animation>
    <type>noshadow</type>
    <object-name>ASI.vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>ASI.vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>ASI.vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>ASI.face</object-name>
    <object-name>ASI.needle</object-name>
    <condition>
      <property>/controls/lighting/instrument-lights</property>
    </condition>
    <emission>
      <red>   0.80 </red>
      <green> 0.50 </green>
      <blue>  0.50 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ASI.needle</object-name>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <interpolation>
      <entry><ind>   0 </ind><dep>   0 </dep></entry>
      <entry><ind>  20 </ind><dep>  10 </dep></entry>
      <entry><ind>  50 </ind><dep>  60 </dep></entry>
      <entry><ind> 100 </ind><dep> 138 </dep></entry>
      <entry><ind> 150 </ind><dep> 210 </dep></entry>
      <entry><ind> 200 </ind><dep> 282 </dep></entry>
      <entry><ind> 250 </ind><dep> 339 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>