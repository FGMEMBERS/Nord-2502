<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourG</object-name>
    <object-name>intporteG</object-name>
    <object-name>inttourD</object-name>
    <object-name>intporteD</object-name>
    <object-name>cockpit</object-name>
    <object-name>planchet</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Nord-2502/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -9.770 </x-m>
      <y-m> -0.551 </y-m>
      <z-m> -0.500 </z-m>
    </offsets>
  </model>

  <!-- Siège pilote -->
  <model>
    <path>Aircraft/Nord-2502/Models/Interior/seat/seat.xml</path>
    <offsets>
      <x-m> -9.663 </x-m>
      <y-m> -0.550 </y-m>
      <z-m> -0.550 </z-m>
    </offsets>
  </model>

  <!-- Siège copilote -->
  <model>
    <path>Aircraft/Nord-2502/Models/Interior/seat/seat.xml</path>
    <offsets>
      <x-m> -9.663 </x-m>
      <y-m>  0.550 </y-m>
      <z-m> -0.600 </z-m>
    </offsets>
  </model>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/Nord-2502/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -10.513 </x-m>
      <y-m>   0.000 </y-m>
      <z-m>  -0.463 </z-m>
    </offsets>
  </model>

  <!-- OverHead -->
  <model>
    <path>Aircraft/Nord-2502/Models/Interior/Panel/overhead/overhead.xml</path>
    <offsets>
      <x-m> -9.877 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.298 </z-m>
    </offsets>
  </model>

  <!-- Portes arrières -->
  <animation>
    <name>IntPorteGauche</name>
    <object-name>intporteG</object-name>
    <object-name>inttourG</object-name>
    <object-name>intvitreporteG</object-name>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>IntPorteGauche</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntPorteGauche</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 80 </factor>
    <center>
      <x-m>  2.182 </x-m>
      <y-m> -1.501 </y-m>
      <z-m> -0.658 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
  </animation>

  <animation>
    <name>IntPorteDroite</name>
    <object-name>intporteD</object-name>
    <object-name>inttourD</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>IntPorteDroite</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntPorteDroite</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 80 </factor>
    <center>
      <x-m>  2.182 </x-m>
      <y-m>  1.501 </y-m>
      <z-m> -0.658 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>
