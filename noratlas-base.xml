<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>BARANGER Emmanuel (3D/FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>
  
    <sound>
      <path>Aircraft/Nord-2502/Sounds/noratlas-sound.xml</path>
    </sound>

    <flaps>
      <setting> 0.00 </setting>
      <setting> 0.25 </setting>
      <setting> 0.50 </setting>
      <setting> 0.75 </setting>
      <setting> 1.00 </setting>
    </flaps>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int" n="0">0</int>
        <int type="int" n="1">0</int>
        <int type="int" n="2">0</int>
        <int type="int" n="3">0</int>
        <int type="int" n="4">0</int>
        <int type="int" n="5">0</int>
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <menubar include="Dialogs/noratlas-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
        <propeller-pitch>1</propeller-pitch>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
        <propeller-pitch>1</propeller-pitch>
      </engine>
    </engines>
    <gear>
      <brake-parking> 1 </brake-parking>
      <gear-down> true </gear-down>
    </gear>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int"> 0 </engine-num>
      <rpm archive="y"> 100 </rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int"> 1 </engine-num>
      <rpm archive="y"> 100 </rpm>
      <running>false</running>
    </engine>
    <engine n="2">
      <engine-num type="int"> 2 </engine-num>
      <running>false</running>
    </engine>
    <engine n="3">
      <engine-num type="int"> 3 </engine-num>
      <running>false</running>
    </engine>
  </engines>

  <instrumentation>
    <doors>
      <crew>
        <position-norm type="float">0</position-norm>
      </crew>
      <passenger>
        <position-norm type="float">0</position-norm>
      </passenger>
    </doors>
  </instrumentation>

  <input>
    <keyboard include="Nasal/noratlas-keyboard.xml"/>
  </input>
 
  <nasal>
    <noratlas>
      <file>Aircraft/Nord-2502/Nasal/liveries.nas</file>
      <file>Aircraft/Nord-2502/Nasal/light.nas</file>
    </noratlas>
    <doors>
      <file>Aircraft/Nord-2502/Nasal/doors.nas</file>
    </doors>
  </nasal>

</PropertyList>

